    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.1",
    "tsc-files": "1.1.4",
    "typescript": "5.5.4",
    "typescript-eslint": "7.18.0",
    "vite": "5.3.5",
    "vite-plugin-svgr": "4.2.0",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "2.0.4"
