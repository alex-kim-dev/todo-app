{
  "name": "todo-app",
  "version": "0.0.0",
  "description": "A solution for \"Todo app\" challenge on frontendmentor.io",
  "license": "MIT",
  "repository": "git@github.com:alex-kim-dev/todo-app.git",
  "author": "Alex Kim (https://github.com/alex-kim-dev)",
  "homepage": "https://alex-kim-dev.github.io/todo-app/",
  "bugs": "https://github.com/alex-kim-dev/todo-app/issues",
  "scripts": {
    "build": "npm run typecheck && vite build",
    "format": "prettier --check \"**/*.{json,yml,md}\"",
    "format:write": "npm run format -- --write",
    "lint": "eslint --ignore-path .gitignore --ext js,ts,jsx,tsx .",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "is-ci || husky install",
    "serve": "vite preview",
    "start": "vite",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "typecheck": "tsc"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/testing-library__jest-dom": "^5.14.2",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@vitejs/plugin-react": "^1.0.7",
    "babel-jest": "^27.4.6",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-package": "^1.3.0",
    "tsc-files": "^1.1.3",
    "typescript": "^4.4.4",
    "vite": "^2.7.2"
  }
